while True:
    height = input('\n'"Choose the height of your triangle: ")

    try:
        val = int(height)
        height = int(height)
    
        for i in range(height+1):
            for j in range(i):
                print("*",end="")
            print('\n')
            
        for i in range(height-1,0,-1):
            for j in range(i):
                print("*",end="")
            print('\n')

        break
       
    except ValueError:
        print("That is ot a valid entry.")
