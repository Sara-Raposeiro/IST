temp=0
j=0

while True:
    a=float(input("Enter a natural number: "))

    if a-int(a)==0 and int(a)>0:
        a=int(a)
        for i in range(1,a+1):
            if a%i==0:
                print(i,"is a divisor of",a,".")
                temp+=i
                j+=1
        med=temp/j
        print('\n''The average value of the divisors is %.3f' %med)
        break
